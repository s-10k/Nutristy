<% include ./partials/header %>



    <% if( products && products.length > 0) { %>
    <ul id="products" class="row">
    <% var i = 0; products.forEach(function(product) { i++; %>
        <li class="product col col-md-4">
            
            <figure class="product-image" height="300" width="200">
                <img src="<%= product.image %>" alt="<%= product.title %>" class="img-thumbnail img-responsive"> 
                <!-- <figcaption><%= product.dqty %> <%= product.unit %></figcaption> -->
            </figure>
            <h5 class="product-title"><%= product.title %></h5>
            <h6><%= product.dqty %> <%= product.unit %></h6>
            <div class="cart-data">
                <form action="/cart" method="post">
                    <div>
                        <span class="price">

                            <%= product.formattedPrice %>
                        </span>
                        <span class="qty-wrap">
                            <label>Qty: </label>
                            <input type="number" name="qty" class="qty" value="1" step="1">
                        </span>
                        <input type="hidden" name="product_id" value="<%= product.product_id %>">
                        <input type="hidden" name="nonce" value="<%= nonce %>">
                        <button type="submit" class="btn btn-primary" action="cart.ejs">
                            <i class="fa fa-cart-plus"></i>
                        </button>
                        <!-- <a href="/cart" class="btn btn-outline-success">Add to cart</a> -->
                    </div>
                </form>
            </div>
        </li>
        <% if(i % 3 === 0) {%><div class="clearfix"></div><% } %>
    <% }); %>
    </ul>
    <% } else { %>
        <p class="alert alert-info">Sorry, no products to show.</p>
    <% } %>


    <% include ./partials/footer %>