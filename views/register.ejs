<% include ./partials/header %>
<head>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</head>

<div class="row justify-content-center">
  <div class="col-md-12 text-center"><h1 class="h3 mb-3 font-weight-normal">Please sign up</h1></div>
  <div class="col-xs-12 col-md-6 col-lg-4">
    <form class="form-signup" action="/register" method="POST">
      <label for="inputUsername" class="heading">Username:</label>
      <input
        type="text"
        id="inputUsername"
        class="form-control"
        name="username"
        placeholder="Name"
        required
        autofocus
      /> <br>
      <label for="inputPassword" class="heading">Password:</label>
      <input
        type="password"
        id="inputPassword"
        class="form-control"
        name="password"
        placeholder="Password"
        required
      /> <br>
      <label for="inputEmail" class="heading">E-mail:</label>
      <input
        type="email"
        id="inputEmail"
        class="form-control"
        name="email"
        placeholder="Email"
        required
      /> <br>
      <label for="phone" class="heading">Phone:</label>
      <input
        type="phone"
        id="inputPhone"
        class="form-control"
        name="phone"
        placeholder="Mobile Number"
      /> <br>
      <label for="address" class="heading">Address:</label>

            <textarea class="form-control" id="address" name="address" rows="4" cols="60">
            </textarea> <br>

      <label for="mealpref" class="heading">Meal Preference:</label> 
      <select name="mealpref" id="mealpref">
          <option value="veg">Veg</option>
          
          <option value="vegan">Vegan</option>
      </select>
      <br><br>
      <label for="allergy" class="heading">Allergies:</label><br>
     
       <input type="checkbox" id="wheat" name="allergy" value="wheat">
      <label for="wheat"> Wheat </label><br>
      <input type="checkbox" id="seafood" name="allergy" value="seafood">
      <label for="seafood"> Seafood </label><br>
      <input type="checkbox" id="milk" name="allergy" value="milk">
      <label for="milk"> Milk </label><br>
      <input type="checkbox" id="sesame" name="allergy" value="sesame">
      <label for="sesame"> Sesame </label><br>
      <input type="checkbox" id="nuts" name="allergy" value="nuts">
      <label for="nuts"> Nuts </label><br>
      <input type="checkbox" id="egg" name="allergy" value="egg">
      <label for="egg"> Egg </label><br>
      <input type="checkbox" id="soy" name="allergy" value="soy">
      <label for="soy"> Soy </label><br>
   
  
  </div>

      <button class="btn btn-lg btn-primary btn-block mt-2" type="submit">
        Sign up
      </button>
    </form>
    <div class="form-signup">
      <p><a class="btn btn-sm btn-primary" href="/recipes">Go Back</a></p>
    </div>
  </div>
</div>

<% include ./partials/footer %>

