<% include ./partials/header %>
<div class="row justify-content-center">
  <div class="col-md-12 text-center"><h1 class="h3 mb-3 font-weight-normal">Please sign in</h1></div>
  <div class="col-xs-12 col-md-6 col-lg-4">
    <form class="form-signin" action="/login" method="POST">
      <!--
        <img class="mb-4" src="../../assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
      -->
      <label for="inputUsername" class="sr-only">Username</label>
      <input
        type="text"
        id="inputUsername"
        class="form-control"
        name="username"
        placeholder="Username"
        required
        autofocus
      />
      <label for="inputPassword" class="sr-only">Password</label>
      <input
        type="password"
        id="inputPassword"
        class="form-control"
        name="password"
        placeholder="Password"
        required
      />
      <!-- <div class="checkbox mb-3"> -->
      <!-- <label> -->
      <!-- <input type="checkbox" value="remember-me"> Remember me -->
      <!-- </label> -->
      <!-- </div> -->
      <button class="btn btn-lg btn-primary btn-block" type="submit">
        Sign in
      </button>
    </form>
    <div class='form-signin'>
      <p>
        Don't have an account? <a href="/register">Sign up</a> and create one
        for free!
      </p>
      <p>
        <a href="/forgot" class="btn btn-sm btn-primary"
          >Forgot your password?</a
        >
      </p>
      <p><a href="/recipes" class="btn btn-sm btn-primary">Go Back</a></p>
    </div>
  </div>
</div>
<% include ./partials/footer %>
